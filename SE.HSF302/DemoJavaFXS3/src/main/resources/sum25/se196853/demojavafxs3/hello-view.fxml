<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/25"
           fx:controller="sum25.se196853.demojavafxs3.controller.UserController"
           styleClass="app">

    <!-- Attach stylesheet -->
    <stylesheets>
        <String fx:value="/sum25/se196853/demojavafxs3/login.css" />
    </stylesheets>

    <!-- Centered Card -->
    <VBox alignment="CENTER" spacing="14.0" maxWidth="360.0" styleClass="card">
        <!-- Title -->
        <Label text="Welcome back" styleClass="title"/>
        <Label text="Sign in to continue" styleClass="subtitle"/>

        <!-- Form -->
        <VBox spacing="6.0" maxWidth="320.0" styleClass="form">
            <Label text="Username" styleClass="label"/>
            <TextField fx:id="txtUsername" promptText="Enter your username"/>

            <Label text="Password" styleClass="label" />
            <PasswordField fx:id="txtPassword" promptText="••••••••"/>
        </VBox>

        <!-- Status -->
        <Label fx:id="lblStatus" styleClass="status"/>

        <!-- Actions -->
        <VBox spacing="10.0" maxWidth="320.0">
            <Button fx:id="btnHello"
                    onAction="#onHelloButtonClick"
                    text="Sign in"
                    maxWidth="Infinity"
                    styleClass="btn btn-primary"/>
            <Button fx:id="btnBye"
                    onAction="#onByeByeClick"
                    text="Exit"
                    maxWidth="Infinity"
                    styleClass="btn btn-ghost"/>
        </VBox>

        <!-- Padding inside card -->
        <padding>
            <Insets top="24.0" right="24.0" bottom="24.0" left="24.0"/>
        </padding>
    </VBox>
</StackPane>
